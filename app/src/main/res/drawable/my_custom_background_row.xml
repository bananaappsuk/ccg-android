<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_pink"/>
        </shape>
    </item>

    <item
        android:left="1dp">
        <shape android:shape="rectangle">

            <gradient
                android:startColor="@color/strokeLine"
                android:centerColor="@color/strokeLine"
                android:endColor="@color/white"
                android:angle="90"/>
            <corners
                android:radius="0dp"/>
        </shape>
    </item>

    <item
        android:left="1dp" android:bottom="1.5dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>

        </shape>
    </item>

</layer-list>
