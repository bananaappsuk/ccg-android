<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ccg.banana.ccg.Fragments.More">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <LinearLayout
        android:id="@+id/scrollView_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/dimen_15"
            android:background="@color/dark_pink"
            android:gravity="center"
            >
        <ImageView
            android:id="@+id/imageView"

            android:layout_width="wrap_content"
            android:scaleType="fitXY"
            android:layout_gravity="center"

            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/login_logo" />
        </LinearLayout>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15"
            android:paddingLeft="@dimen/dimen_10"
            android:background="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contactDetails"
                android:textSize="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_5"
                android:textColor="@color/dark_pink"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_marginBottom="@dimen/dimen_20"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10"

                    android:layout_weight="1"
                    android:background="@drawable/my_custom_background"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen_20">


                        <TextView
                            android:id="@+id/headOffice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/HeadOffice"

                            android:layout_marginRight="@dimen/dimen_5"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:textColor="@color/dark_black"


                            />

                    <TextView
                        android:id="@+id/headOfficeaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/HeadOfficeaddress"

                        android:layout_marginTop="@dimen/dimen_5"
                        android:textColor="@color/cement"
                        android:paddingBottom="@dimen/dimen_20"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10"

                    android:background="@drawable/my_custom_background"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/dimen_20">



                    <TextView
                        android:id="@+id/BournemouthOffice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/BournemouthOffice"

                        android:layout_marginRight="@dimen/dimen_5"
                        android:layout_marginTop="@dimen/dimen_5"
                        android:textColor="@color/dark_black"


                        />

                    <TextView
                        android:id="@+id/BournemouthOfficeaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/BournemouthOfficeaddress"

                        android:layout_marginTop="@dimen/dimen_5"
                        android:textColor="@color/cement"
                        android:paddingBottom="@dimen/dimen_20"

                        />



                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_10"
android:layout_marginBottom="@dimen/dimen_10"
                android:layout_weight="1"
                android:background="@drawable/my_custom_background"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimen_20">



                <TextView
                    android:id="@+id/general"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/general"

                    android:layout_marginTop="@dimen/dimen_5"
                    android:textColor="@color/cement"
                    android:paddingBottom="@dimen/dimen_20"

                    />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>

</FrameLayout>
