<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@mipmap/login_bg"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
  >

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="@dimen/dimen_40"
        android:layout_width="wrap_content"
        android:scaleType="fitXY"
        android:layout_gravity="center"

        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/login_logo" />
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/scrollView_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

    <TextView
        android:paddingLeft="@dimen/dimen_20"
        android:id="@+id/welcome"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_20"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgot" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_30"
        android:orientation="vertical">
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_20"
            android:paddingLeft="@dimen/dimen_40"
            android:paddingRight="@dimen/dimen_40"
            android:drawableLeft="@mipmap/contact"
            android:background="@color/light_gray"
            android:gravity="center"
            android:inputType="text"
            android:layout_gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/dark_pink"
            android:hint="@string/mail"
            android:textColorHint="@color/dark_pink"
            android:id="@+id/username"/>


        <TextView
            android:paddingLeft="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_10"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_20"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dontHaveMail" />

        <TextView
            android:paddingLeft="@dimen/dimen_20"
            android:layout_marginTop="@dimen/dimen_5"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_20"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/purva" />

        <RelativeLayout
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_gravity="center"
            android:layout_width="match_parent">
            <ImageView
                android:id="@+id/loginImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/button_login" />

            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_5"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="@string/Submit"
                android:textColor="@color/dark_pink" />
        </RelativeLayout>
        <TextView
            android:id="@+id/forgot"
            android:layout_marginTop="@dimen/dimen_10"
            android:onClick="ForgotPassword"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>
    </ScrollView>


</LinearLayout>
